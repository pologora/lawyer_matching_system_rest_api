{
  "name": "lawyer_matching_service",
  "version": "0.0.1",
  "description": "Platform to match clients with lawyers",
  "main": "server.js",
  "author": "Oleksandr Wojtyla",
  "license": "MIT",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon -L --files src/server.ts",
    "start:prod": "npm run build && cross-env NODE_ENV=production node build/server.js",
    "build": "rimraf build && npm run copy && npx tsc",
    "test": "cross-env NODE_ENV=test jest --testPathPattern=unit\\.test\\.ts$",
    "test:integration": "npm run setup:test || npm run jest:integration",
    "jest:integration": "cross-env NODE_ENV=test  jest  --testPathPattern=integration\\.test\\.ts$",
    "setup": "cross-env NODE_ENV=development ts-node src/config/databaseTables/setupDatabaseTablesAndValues.ts",
    "setup:prod": "cross-env NODE_ENV=production ts-node src/config/databaseTables/setupDatabaseTablesAndValues.ts",
    "setup:test": "cross-env NODE_ENV=test ts-node src/config/databaseTables/setupDatabaseTablesAndValues.ts",
    "down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev-build": "docker-compose -f docker-compose.dev.yml up --build",
    "test:c": "npx jest --coverage",
    "docker:dev": "npm run setup:docker && docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "npm run setup:docker && docker-compose -f docker-compose.prod.yml up --build",
    "setup:docker": "ts-node src/config/setupDerictories.ts",
    "copy": "copyfiles -u 4 src/core/email/emailTemplates**/*  build/core/email/emailTemplates",
    "lint": "npx eslint"
  },
  "overrides": {
    "eslint": "^9.6.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pug": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.15.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "html-to-text": "^9.0.5",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.10.0",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pug": "^3.0.3",
    "sharp": "^0.33.4",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
